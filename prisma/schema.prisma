generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id          String    @id
    displayName String
    email       String    @unique
    googleId    String?   @unique
    avatarUrl   String?
    bio         String?
    sessions    Session[]

    createdAt DateTime @default(now())
    Fluff     Fluff[]

    @@map("users")
}

model Fluff {
    id          String  @id
    userId      String
    user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    displayName String
    imageUrl    String?

    createdAt DateTime @default(now())

    @@map("fluffs")
}

model Session {
    id        String   @id
    userId    String
    expiresAt DateTime
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@map("sessions")
}
